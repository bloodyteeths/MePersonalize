<div class="personalizer-container" data-product-id="{{ product.id }}">
  <h2>{{ section.settings.heading }}</h2>
  
  <div class="personalizer-layout">
    <!-- Preview Area -->
    <div class="personalizer-preview">
      <div class="preview-wrapper">
        <img src="{{ product.featured_image | img_url: 'master' }}" alt="Base Product" class="base-image" id="base-product-image">
        <div id="preview-overlay">
            <!-- Patches will be injected here -->
        </div>
      </div>
    </div>

    <!-- Controls Area -->
    <div class="personalizer-controls">
      <div class="patch-selectors">
        <h3>Select Your Patches</h3>
        <div id="patch-slots">
          <!-- Slot selectors will be generated here -->
        </div>
      </div>

      <div class="text-input-section">
        <h3>Add Name (Embroidery)</h3>
        <input type="text" id="embroidery-text" placeholder="Enter Name (e.g. Maverick)" maxlength="12">
      </div>
    </div>
  </div>
  
  <!-- Hidden inputs for form submission -->
  <div id="hidden-inputs-container"></div>
  <input type="hidden" name="properties[Embroidery Text]" id="prop-text">

  <!-- Data Injection -->
  <script>
    window.PERSONALIZER_CONFIG = {
      textZone: {
        top: {{ section.settings.text_top | default: 25 }},
        left: {{ section.settings.text_left | default: 50 }}
      },
      slots: [
        {% for i in (1..5) %}
          {% capture name_key %}slot_{{i}}_name{% endcapture %}
          {% capture group_key %}slot_{{i}}_group{% endcapture %}
          {% capture top_key %}slot_{{i}}_top{% endcapture %}
          {% capture left_key %}slot_{{i}}_left{% endcapture %}
          {% capture width_key %}slot_{{i}}_width{% endcapture %}
          
          {% if section.settings[name_key] != blank %}
            {
              id: "{{ i }}",
              name: "{{ section.settings[name_key] }}",
              groupId: "{{ section.settings[group_key] }}",
              top: {{ section.settings[top_key] }},
              left: {{ section.settings[left_key] }},
              width: {{ section.settings[width_key] }}
            },
          {% endif %}
        {% endfor %}
      ],
      patches: [
        {% for i in (1..15) %}
          {% capture img_key %}patch_{{i}}_img{% endcapture %}
          {% capture name_key %}patch_{{i}}_name{% endcapture %}
          {% capture group_key %}patch_{{i}}_group{% endcapture %}
          
          {% if section.settings[img_key] != blank %}
            {
              id: "p{{ i }}",
              name: "{{ section.settings[name_key] | default: 'Patch ' | append: i }}",
              groupId: "{{ section.settings[group_key] }}",
              src: "{{ section.settings[img_key] | img_url: '300x' }}"
            },
          {% endif %}
        {% endfor %}
      ]
    };
  </script>
</div>
