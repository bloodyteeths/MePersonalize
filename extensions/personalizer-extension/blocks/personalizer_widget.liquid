          src: {{ section.settings.patch_11_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_12_img != blank %}
        {
          id: "p12",
          name: {{ section.settings.patch_12_name | default: 'Patch 12' | json }},
          groupId: {{ section.settings.patch_12_group | default: "other" | json }},
          src: {{ section.settings.patch_12_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_13_img != blank %}
        {
          id: "p13",
          name: {{ section.settings.patch_13_name | default: 'Patch 13' | json }},
          groupId: {{ section.settings.patch_13_group | default: "other" | json }},
          src: {{ section.settings.patch_13_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_14_img != blank %}
        {
          id: "p14",
