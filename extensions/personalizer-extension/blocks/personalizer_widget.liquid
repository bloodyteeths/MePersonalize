{% schema %}
{
  "name": "Personalizer Widget",
  "target": "section",
  "stylesheet": "personalizer.css",
  "javascript": "personalizer.js",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Widget Heading",
      "default": "Personalize Your Racer",
      "info": "Main heading displayed above the personalizer"
    },
    
    {
      "type": "header",
      "content": "Text Personalization"
    },
    {
      "type": "range",
      "id": "text_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Text Vertical Position",
      "default": 25,
      "info": "Distance from top (0% = top, 100% = bottom)"
    },
    {
      "type": "range",
      "id": "text_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Text Horizontal Position",
      "default": 50,
      "info": "Distance from left (0% = left, 100% = right)"
    },
    
    {
      "type": "header",
      "content": "Patch Slots Configuration"
    },
    { "type": "text", "id": "slot_1_name", "label": "Slot 1 - Name", "default": "Right Chest", "info": "Display name" },
    { "type": "text", "id": "slot_1_group", "label": "Slot 1 - Group", "default": "chest", "info": "Patches with matching group can be placed here" },
    { "type": "range", "id": "slot_1_top", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 1 - Top", "default": 38 },
    { "type": "range", "id": "slot_1_left", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 1 - Left", "default": 38 },
    { "type": "range", "id": "slot_1_width", "min": 5, "max": 50, "step": 1, "unit": "%", "label": "Slot 1 - Width", "default": 12 },

    { "type": "text", "id": "slot_2_name", "label": "Slot 2 - Name", "default": "Left Chest", "info": "Display name" },
    { "type": "text", "id": "slot_2_group", "label": "Slot 2 - Group", "default": "chest", "info": "Patches with matching group can be placed here" },
    { "type": "range", "id": "slot_2_top", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 2 - Top", "default": 38 },
    { "type": "range", "id": "slot_2_left", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 2 - Left", "default": 62 },
    { "type": "range", "id": "slot_2_width", "min": 5, "max": 50, "step": 1, "unit": "%", "label": "Slot 2 - Width", "default": 12 },

    { "type": "text", "id": "slot_3_name", "label": "Slot 3 - Name", "default": "Right Hip", "info": "Display name" },
    { "type": "text", "id": "slot_3_group", "label": "Slot 3 - Group", "default": "hip", "info": "Patches with matching group can be placed here" },
    { "type": "range", "id": "slot_3_top", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 3 - Top", "default": 52 },
    { "type": "range", "id": "slot_3_left", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 3 - Left", "default": 38 },
    { "type": "range", "id": "slot_3_width", "min": 5, "max": 50, "step": 1, "unit": "%", "label": "Slot 3 - Width", "default": 12 },

    { "type": "text", "id": "slot_4_name", "label": "Slot 4 - Name", "default": "Left Hip", "info": "Display name" },
    { "type": "text", "id": "slot_4_group", "label": "Slot 4 - Group", "default": "hip", "info": "Patches with matching group can be placed here" },
    { "type": "range", "id": "slot_4_top", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 4 - Top", "default": 52 },
    { "type": "range", "id": "slot_4_left", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 4 - Left", "default": 62 },
    { "type": "range", "id": "slot_4_width", "min": 5, "max": 50, "step": 1, "unit": "%", "label": "Slot 4 - Width", "default": 12 },

    { "type": "text", "id": "slot_5_name", "label": "Slot 5 - Name", "default": "Hat", "info": "Display name" },
    { "type": "text", "id": "slot_5_group", "label": "Slot 5 - Group", "default": "hat", "info": "Patches with matching group can be placed here" },
    { "type": "range", "id": "slot_5_top", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 5 - Top", "default": 8 },
    { "type": "range", "id": "slot_5_left", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Slot 5 - Left", "default": 50 },
    { "type": "range", "id": "slot_5_width", "min": 5, "max": 50, "step": 1, "unit": "%", "label": "Slot 5 - Width", "default": 15 },

    {
      "type": "header",
      "content": "Patch Library - Chest Group"
    },
    { "type": "image_picker", "id": "patch_1_img", "label": "Patch 1 - Image" },
    { "type": "text", "id": "patch_1_name", "label": "Patch 1 - Name", "info": "e.g., 'Star Badge'" },
    { "type": "text", "id": "patch_1_group", "label": "Patch 1 - Group", "default": "chest" },

    { "type": "image_picker", "id": "patch_2_img", "label": "Patch 2 - Image" },
    { "type": "text", "id": "patch_2_name", "label": "Patch 2 - Name" },
    { "type": "text", "id": "patch_2_group", "label": "Patch 2 - Group", "default": "chest" },

    { "type": "image_picker", "id": "patch_3_img", "label": "Patch 3 - Image" },
    { "type": "text", "id": "patch_3_name", "label": "Patch 3 - Name" },
    { "type": "text", "id": "patch_3_group", "label": "Patch 3 - Group", "default": "chest" },

    { "type": "image_picker", "id": "patch_4_img", "label": "Patch 4 - Image" },
    { "type": "text", "id": "patch_4_name", "label": "Patch 4 - Name" },
    { "type": "text", "id": "patch_4_group", "label": "Patch 4 - Group", "default": "chest" },

    { "type": "image_picker", "id": "patch_5_img", "label": "Patch 5 - Image" },
    { "type": "text", "id": "patch_5_name", "label": "Patch 5 - Name" },
    { "type": "text", "id": "patch_5_group", "label": "Patch 5 - Group", "default": "chest" },

    {
      "type": "header",
      "content": "Patch Library - Hip Group"
    },
    { "type": "image_picker", "id": "patch_6_img", "label": "Patch 6 - Image" },
    { "type": "text", "id": "patch_6_name", "label": "Patch 6 - Name" },
    { "type": "text", "id": "patch_6_group", "label": "Patch 6 - Group", "default": "hip" },

    { "type": "image_picker", "id": "patch_7_img", "label": "Patch 7 - Image" },
    { "type": "text", "id": "patch_7_name", "label": "Patch 7 - Name" },
    { "type": "text", "id": "patch_7_group", "label": "Patch 7 - Group", "default": "hip" },

    { "type": "image_picker", "id": "patch_8_img", "label": "Patch 8 - Image" },
    { "type": "text", "id": "patch_8_name", "label": "Patch 8 - Name" },
    { "type": "text", "id": "patch_8_group", "label": "Patch 8 - Group", "default": "hip" },

    { "type": "image_picker", "id": "patch_9_img", "label": "Patch 9 - Image" },
    { "type": "text", "id": "patch_9_name", "label": "Patch 9 - Name" },
    { "type": "text", "id": "patch_9_group", "label": "Patch 9 - Group", "default": "hip" },

    {
      "type": "header",
      "content": "Patch Library - Hat & Other"
    },
    { "type": "image_picker", "id": "patch_10_img", "label": "Patch 10 - Image" },
    { "type": "text", "id": "patch_10_name", "label": "Patch 10 - Name" },
    { "type": "text", "id": "patch_10_group", "label": "Patch 10 - Group", "default": "hat" },

    { "type": "image_picker", "id": "patch_11_img", "label": "Patch 11 - Image" },
    { "type": "text", "id": "patch_11_name", "label": "Patch 11 - Name" },
    { "type": "text", "id": "patch_11_group", "label": "Patch 11 - Group", "info": "Set to 'chest', 'hip', 'hat', or custom" },

    { "type": "image_picker", "id": "patch_12_img", "label": "Patch 12 - Image" },
    { "type": "text", "id": "patch_12_name", "label": "Patch 12 - Name" },
    { "type": "text", "id": "patch_12_group", "label": "Patch 12 - Group" },

    { "type": "image_picker", "id": "patch_13_img", "label": "Patch 13 - Image" },
    { "type": "text", "id": "patch_13_name", "label": "Patch 13 - Name" },
    { "type": "text", "id": "patch_13_group", "label": "Patch 13 - Group" },

    { "type": "image_picker", "id": "patch_14_img", "label": "Patch 14 - Image" },
    { "type": "text", "id": "patch_14_name", "label": "Patch 14 - Name" },
    { "type": "text", "id": "patch_14_group", "label": "Patch 14 - Group" },

    { "type": "image_picker", "id": "patch_15_img", "label": "Patch 15 - Image" },
    { "type": "text", "id": "patch_15_name", "label": "Patch 15 - Name" },
    { "type": "text", "id": "patch_15_group", "label": "Patch 15 - Group" }
  ]
}
{% endschema %}

<div class="personalizer-container" data-product-id="{{ product.id }}">
  <h2>{{ section.settings.heading }}</h2>
  
  <div class="personalizer-layout">
    <!-- Preview Area -->
    <div class="personalizer-preview">
      <div class="preview-wrapper">
        <img src="{{ product.featured_image | image_url: width: 800 }}" width="800" height="800" alt="Base Product" class="base-image" id="base-product-image">
        <div id="preview-overlay">
            <!-- Patches will be injected here -->
        </div>
      </div>
    </div>

    <!-- Controls Area -->
    <div class="personalizer-controls">
      <div class="patch-selectors">
        <h3>Select Your Patches</h3>
        <div id="patch-slots">
          <!-- Slot selectors will be generated here -->
        </div>
      </div>

      <div class="text-input-section">
        <h3>Add Name (Embroidery)</h3>
        <input type="text" id="embroidery-text" placeholder="Enter Name (e.g. Maverick)" maxlength="12">
      </div>
    </div>
  </div>
  
  <!-- Hidden inputs for form submission -->
  <div id="hidden-inputs-container"></div>
  <input type="hidden" name="properties[Embroidery Text]" id="prop-text">

  <!-- Data Injection -->
  <script>
    window.PERSONALIZER_CONFIG = {
      textZone: {
        top: {{ section.settings.text_top | default: 25 }},
        left: {{ section.settings.text_left | default: 50 }}
      },
      slots: [
        {
          id: "1",
          name: {{ section.settings.slot_1_name | default: "Chest" | json }},
          groupId: {{ section.settings.slot_1_group | default: "group1" | json }},
          top: {{ section.settings.slot_1_top | default: 30 }},
          left: {{ section.settings.slot_1_left | default: 30 }},
          width: {{ section.settings.slot_1_width | default: 12 }}
        },
        {
          id: "2",
          name: {{ section.settings.slot_2_name | json }},
          groupId: {{ section.settings.slot_2_group | json }},
          top: {{ section.settings.slot_2_top | default: 0 }},
          left: {{ section.settings.slot_2_left | default: 0 }},
          width: {{ section.settings.slot_2_width | default: 12 }}
        },
        {
          id: "3",
          name: {{ section.settings.slot_3_name | json }},
          groupId: {{ section.settings.slot_3_group | json }},
          top: {{ section.settings.slot_3_top | default: 0 }},
          left: {{ section.settings.slot_3_left | default: 0 }},
          width: {{ section.settings.slot_3_width | default: 12 }}
        },
        {
          id: "4",
          name: {{ section.settings.slot_4_name | json }},
          groupId: {{ section.settings.slot_4_group | json }},
          top: {{ section.settings.slot_4_top | default: 0 }},
          left: {{ section.settings.slot_4_left | default: 0 }},
          width: {{ section.settings.slot_4_width | default: 12 }}
        },
        {
          id: "5",
          name: {{ section.settings.slot_5_name | json }},
          groupId: {{ section.settings.slot_5_group | json }},
          top: {{ section.settings.slot_5_top | default: 0 }},
          left: {{ section.settings.slot_5_left | default: 0 }},
          width: {{ section.settings.slot_5_width | default: 12 }}
        }
      ],
      patches: [
        {% if section.settings.patch_1_img != blank %}
        {
          id: "p1",
          name: {{ section.settings.patch_1_name | default: 'Patch 1' | json }},
          groupId: {{ section.settings.patch_1_group | default: "chest" | json }},
          src: {{ section.settings.patch_1_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_2_img != blank %}
        {
          id: "p2",
          name: {{ section.settings.patch_2_name | default: 'Patch 2' | json }},
          groupId: {{ section.settings.patch_2_group | default: "chest" | json }},
          src: {{ section.settings.patch_2_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_3_img != blank %}
        {
          id: "p3",
          name: {{ section.settings.patch_3_name | default: 'Patch 3' | json }},
          groupId: {{ section.settings.patch_3_group | default: "chest" | json }},
          src: {{ section.settings.patch_3_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_4_img != blank %}
        {
          id: "p4",
          name: {{ section.settings.patch_4_name | default: 'Patch 4' | json }},
          groupId: {{ section.settings.patch_4_group | default: "chest" | json }},
          src: {{ section.settings.patch_4_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_5_img != blank %}
        {
          id: "p5",
          name: {{ section.settings.patch_5_name | default: 'Patch 5' | json }},
          groupId: {{ section.settings.patch_5_group | default: "chest" | json }},
          src: {{ section.settings.patch_5_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_6_img != blank %}
        {
          id: "p6",
          name: {{ section.settings.patch_6_name | default: 'Patch 6' | json }},
          groupId: {{ section.settings.patch_6_group | default: "hip" | json }},
          src: {{ section.settings.patch_6_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_7_img != blank %}
        {
          id: "p7",
          name: {{ section.settings.patch_7_name | default: 'Patch 7' | json }},
          groupId: {{ section.settings.patch_7_group | default: "hip" | json }},
          src: {{ section.settings.patch_7_img | image_url: width: 300 | json }}
        },
        {% endif %}
        {% if section.settings.patch_8_img != blank %}
        {
