<div class="personalizer-container" data-product-id="{{ product.id }}">
  <h2>{{ block.settings.heading }}</h2>

  <div class="personalizer-layout">
    <!-- Preview Area with Tabs -->
    <div class="personalizer-preview">
      <div class="preview-tabs">
        <button class="preview-tab active" data-tab="front">Front</button>
        <button class="preview-tab" data-tab="back">Back</button>
      </div>

      <!-- Front Preview (2nd image) -->
      <div class="preview-wrapper" id="front-preview">
        {% assign front_image = product.images[1] | default: product.featured_image %}
        <img src="{{ front_image | image_url: width: 800 }}" alt="Front View" class="base-image">
        <div id="preview-overlay"></div>
      </div>

      <!-- Back Preview (3rd image) -->
      <div class="preview-wrapper" id="back-preview" style="display: none;">
        {% assign back_image = product.images[2] | default: product.featured_image %}
        <img src="{{ back_image | image_url: width: 800 }}" alt="Back View" class="base-image">
        <div id="back-overlay"></div>
      </div>
    </div>

    <!-- Controls Area -->
    <div class="personalizer-controls">
      <div class="patch-selectors">
        <h3>Select Your Patches</h3>
        <div id="patch-slots"></div>
      </div>

      <div class="text-input-section">
        <h3>Front Name (Embroidery)</h3>
        <input type="text" id="embroidery-text" placeholder="Enter Name (e.g. Maverick)" maxlength="12">
      </div>

      <div class="text-input-section">
        <h3>Back Name (Embroidery)</h3>
        <input type="text" id="back-text" placeholder="Enter Back Name" maxlength="12">
        <div class="color-selector">
          <label>Text Color:</label>
          <button class="color-btn active" data-color="white">White</button>
          <button class="color-btn" data-color="black">Black</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Hidden inputs for form submission -->
  <div id="hidden-inputs-container"></div>
  <input type="hidden" name="properties[Embroidery Text]" id="prop-text">
  <input type="hidden" name="properties[Back Text]" id="prop-back-text">
  <input type="hidden" name="properties[Back Text Color]" id="prop-back-color" value="white">

  <!-- Data Injection -->
  <script>
    window.PERSONALIZER_CONFIG = {
      textZone: {
        top: {{ block.settings.text_top | default: 25 }},
        left: {{ block.settings.text_left | default: 50 }}
      },
      backTextZone: {
        top: {{ block.settings.back_text_top | default: 30 }},
        left: {{ block.settings.back_text_left | default: 50 }}
      },
      slots: [
        { id: "1", name: "Right Chest", top: {{ block.settings.slot_1_top }}, left: {{ block.settings.slot_1_left }}, width: {{ block.settings.slot_1_width }} },
        { id: "2", name: "Left Chest", top: {{ block.settings.slot_2_top }}, left: {{ block.settings.slot_2_left }}, width: {{ block.settings.slot_2_width }} },
        { id: "3", name: "Right Hip", top: {{ block.settings.slot_3_top }}, left: {{ block.settings.slot_3_left }}, width: {{ block.settings.slot_3_width }} },
        { id: "4", name: "Left Hip", top: {{ block.settings.slot_4_top }}, left: {{ block.settings.slot_4_left }}, width: {{ block.settings.slot_4_width }} },
        { id: "5", name: "Hat", top: {{ block.settings.slot_5_top }}, left: {{ block.settings.slot_5_left }}, width: {{ block.settings.slot_5_width }} },
        { id: "6", name: "Arm", top: {{ block.settings.slot_6_top }}, left: {{ block.settings.slot_6_left }}, width: {{ block.settings.slot_6_width }} }
      ],
      patches: []
    };

    // Populate patches (unified - no groups)
    {% for i in (1..22) %}
      {% assign img_key = 'patch_' | append: i | append: '_img' %}
      {% assign name_key = 'patch_' | append: i | append: '_name' %}
      {% if block.settings[img_key] != blank %}
    window.PERSONALIZER_CONFIG.patches.push({
      id: "p{{ i }}",
      name: {{ block.settings[name_key] | default: 'Patch' | append: ' ' | append: i | json }},
      src: "{{ block.settings[img_key] | image_url: width: 300, format: 'png' }}"
    });
      {% endif %}
    {% endfor %}

    console.log('PERSONALIZER: VERSION 26 (6 slots, unified patches, back text)');
    console.log('Config:', window.PERSONALIZER_CONFIG);
  </script>
</div>
