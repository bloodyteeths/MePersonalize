        }
        {% endif %}
      ]
    };
    console.log("LIQUID DEBUG: Slot 2 Name:", {{ section.settings.slot_2_name | json }});
    console.log("LIQUID DEBUG: Patch 2 Src:", {{ section.settings.patch_2_img | image_url: width: 300 | json }});

    // COMPREHENSIVE DEBUG LOGGING
    console.log('=== PERSONALIZER DEBUG START ===');
    console.log('Full Config:', window.PERSONALIZER_CONFIG);
    console.log('Total Slots:', window.PERSONALIZER_CONFIG.slots.length);
    console.log('Total Patches:', window.PERSONALIZER_CONFIG.patches.length);
    
    // Log each patch with details
    window.PERSONALIZER_CONFIG.patches.forEach((patch, index) => {
      console.log(`Patch ${index + 1}:`, {
        id: patch.id,
        name: patch.name,
        groupId: patch.groupId,
        src: patch.src,
        srcLength: patch.src ? patch.src.length : 0
      });
    });
    
    // Log Liquid values directly
    console.log('LIQUID DEBUG - Patch 1 Image:', {{ section.settings.patch_1_img | json }});
    console.log('LIQUID DEBUG - Patch 1 Image URL:', {{ section.settings.patch_1_img | image_url: width: 300 | json }});
    console.log('LIQUID DEBUG - Patch 2 Image:', {{ section.settings.patch_2_img | json }});
    console.log('LIQUID DEBUG - Patch 2 Image URL:', {{ section.settings.patch_2_img | image_url: width: 300 | json }});
    console.log('=== PERSONALIZER DEBUG END ===');

  </script>
</div>
